<inset xmlns:android="http://schemas.android.com/apk/res/android"
    android:insetBottom="16dp">
    <layer-list>
        <item>
            <shape android:shape="rectangle">
                <solid android:color="@android:color/transparent" />
            </shape>
        </item>

        <item
            android:bottom="-2dp"
            android:left="-2dp"
            android:right="-2dp"
            android:top="-2dp">
            <shape>
                <stroke
                    android:width="1dp"
                    android:color="@color/white" />
            </shape>
        </item>
    </layer-list>
</inset>