<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_dark"
    android:clickable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <com.github.chrisbanes.photoview.PhotoView
        android:id="@+id/single_picture_imageview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:contentDescription="Megjelenő kép"
        android:scaleType="center" />

    <EditText
        android:id="@+id/et_single_picture"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="25dp"
        android:layout_weight="0.25"
        android:autoSizeMaxTextSize="16dp"
        android:background="@drawable/rounded"
        android:backgroundTint="@android:color/background_light"
        android:fontFamily="sans-serif"
        android:gravity="center"
        android:hint="Ide kommentelj!\n(kötelező)"
        android:importantForAutofill="no"
        android:inputType="textMultiLine"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:textSize="16dp" />

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_weight="0.05"
        android:gravity="center">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/b_single_picture_negative"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="25dp"
            android:autoSizeMaxTextSize="20dp"
            android:background="@drawable/positive_button"
            android:backgroundTint="#ED091C"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:paddingBottom="5dp"
            android:text="KÉP TÖRLÉSE"
            android:textSize="16dp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/b_single_picture_positive"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="70dp"
            android:layout_marginTop="3dp"
            android:layout_marginEnd="7dp"
            android:layout_marginBottom="25dp"
            android:autoSizeMaxTextSize="20dp"
            android:background="@drawable/positive_button"
            android:backgroundTint="@color/Giganet_green"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            android:padding="5dp"
            android:text="KOMMENT MENTÉSE"
            android:textSize="16dp" />
    </androidx.appcompat.widget.LinearLayoutCompat>

</LinearLayout>