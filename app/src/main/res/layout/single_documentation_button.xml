<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/llc_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="30dp"
    android:layout_marginEnd="30dp"
    android:layout_marginBottom="30dp"
    android:background="@drawable/rounded"
    android:backgroundTint="@color/white"
    android:orientation="horizontal">


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/t_documentationName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@drawable/rounded"
        android:backgroundTint="#9F9F9F"
        android:fontFamily="sans-serif"
        android:foreground="?attr/selectableItemBackgroundBorderless"
        android:padding="8dp"
        android:textColor="@color/white"
        android:textSize="18dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/iv_lastDocumentedPicture"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginStart="3dp"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="3dp"
        android:background="@drawable/rounded"
        android:backgroundTint="#9F9F9F"
        app:layout_constraintBottom_toBottomOf="@+id/t_documentationName"
        app:layout_constraintStart_toStartOf="@+id/t_documentationName"
        app:layout_constraintTop_toTopOf="@+id/t_documentationName" />
</androidx.constraintlayout.widget.ConstraintLayout>