<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="35dp"
    android:layout_marginBottom="25dp"
    android:background="@drawable/rounded"
    android:backgroundTint="@color/cardview_light_background"
    tools:context="com.giganet.giganet_worksheet.View.WorkStateFragments.DrawWorkStateFragment">

    <TextView
        android:id="@+id/t_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="3dp"
        android:text="Cím megjelenítése:"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="@+id/ib_draw_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/ib_draw_button"
        app:layout_constraintVertical_bias="0.466" />

    <ImageView
        android:id="@+id/iv_check_mark"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:src="@drawable/question_mark"
        app:layout_constraintBottom_toTopOf="@+id/t_title"
        app:layout_constraintStart_toEndOf="@+id/t_title" />


    <ImageButton
        android:id="@+id/ib_draw_button"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/signature_icon"
        android:foreground="?attr/selectableItemBackgroundBorderless"
        android:gravity="center"
        android:scaleType="centerInside"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.844"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>